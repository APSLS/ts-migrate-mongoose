{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "tools",
    "node_modules",
    "./jest.config.js",
  ]
}